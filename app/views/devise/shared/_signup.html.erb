<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{
  class: "form-horizontal frm-user-ajax", id: "frm-register-ajax", role: "form"}) do |f| %>
  <%= devise_error_messages! %>
  <div class="hide alert alert-danger"></div>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :name, class: "form-control", placeholder: "Tên hiển thị" %>
      <span class="help-block"></span>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.email_field :email, class: "form-control", placeholder: "Email ..." %>
      <span class="help-block"></span>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "col-sm-4 control-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <div class="col-sm-6">
      <%= f.password_field :password, class: "form-control", placeholder: "Mật khẩu ...", autocomplete: "off" %>
      <span class="help-block"></span>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, class: "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Xác nhận mật khẩu ...", autocomplete: "off" %>
      <span class="help-block"></span>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <%= f.submit "Sign up", class: "btn btn-auth-submit" %>
    </div>
  </div>
<% end %>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
<div class="text-center text-center-auth">
  <p><%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-link" %></p>
</div>
<% end -%>
<hr>
<%= render "devise/shared/social_login" %>
<hr>

